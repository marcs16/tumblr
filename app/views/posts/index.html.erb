<div id=page_wrapper>     
  <p id="notice"><%= notice %></p>

  <h1>Todos los post</h1>

  <table>
    <thead>
      <tr>
        <th>titulo</th>
        <th>Contenido</th>
        <th>Creado</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><p class="body"><%= truncate(post.body, length:50) %></td>
          <td><%=time_ago_in_words(post.created_at)%><br>
          <td><%= link_to 'Mostrar', post %></td>
          <td><%= link_to 'Editar', edit_post_path(post) %></td>
          <td><%= link_to 'Eliminar', post, method: :delete, data: { confirm: '¿De verdad quieres realizar esta acción?' } %></td>
        </tr>
        <br>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo post', new_post_path %>
</div>